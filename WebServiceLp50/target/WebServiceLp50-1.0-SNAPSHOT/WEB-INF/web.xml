<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>WebServiceLp50</display-name>
    <servlet>
        <servlet-name>ListeEvenement</servlet-name>
        <servlet-class>com.utbm.webservicelp50.core.servletEvenement.ServletListeEvenement</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListeEvenement</servlet-name>
        <url-pattern>/getListeEvenement</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ListeEvenementByDate</servlet-name>
        <servlet-class>com.utbm.webservicelp50.core.servletEvenement.ServletListeEvenementByDate</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListeEvenementByDate</servlet-name>
        <url-pattern>/getListeEvenementByDate</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>EvenmentById</servlet-name>
        <servlet-class>com.utbm.webservicelp50.core.servletEvenement.ServletEvenementByID</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EvenmentById</servlet-name>
        <url-pattern>/getEvenmentById</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>AddCommentaireById</servlet-name>
        <servlet-class>com.utbm.webservicelp50.core.servletEvenement.ServletAddCommentaireById</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddCommentaireById</servlet-name>
        <url-pattern>/AddCommentaireById</url-pattern>
    </servlet-mapping>
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
